# Oracle Database Configuration
# Replace these values with your actual Oracle DB credentials
ORACLE_USER=your_oracle_username
ORACLE_PASSWORD=your_oracle_password
ORACLE_DSN=your_oracle_dsn
ORACLE_WALLET_LOCATION=path_to_wallet_directory

# Google Drive and Sheets Configuration
# Replace these values with your actual Google Drive folder ID and Google Sheet ID

# Google Drive folder ID containing CV files
DRIVE_FOLDER_ID=your_drive_folder_id_here

# Google Sheet ID for storing Candidate ID mappings
MAPPING_SHEET_ID=your_sheet_id_here

# Optional: Name of the worksheet in the Google Sheet (default: "Candidate ID Mapping")
MAPPING_SHEET_NAME=Candidate ID Mapping

# Google Form Configuration
# Google Form ID for the application form
GOOGLE_FORM_ID=your_form_id_here

# Google Form Response Sheet ID (for edit link API)
FORM_SHEET_ID=your_form_response_sheet_id_here

# API Configuration
# Secret key for API authentication
API_SECRET_KEY=your_secret_key_here

# Optional: Port for the API server (default: 5000)
API_PORT=5000

# Optional: Host for the API server (default: 0.0.0.0)
API_HOST=0.0.0.0